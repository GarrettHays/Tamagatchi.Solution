<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Minion Roll Count!</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
@using Tamagatchi.Models;
  <h1>All Minions: </h1>

    @foreach (BaseTamagatchi item in Model)
    {
    <h2><a href="play/@item.Id">@item.Name</a></h2>
    }

    <a href='/play/new'>Add another item</a>
    <a href='/play'>View all items</a>
</body>
</html>